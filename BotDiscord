# Use a official lightweight Node.js 18 image.
FROM node:18-alpine3.15

# Set the working directory
WORKDIR /home

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies (incl. devDependencies for build).
RUN npm install

# Copy local code to the container image.
COPY ./ /home

# Build the app, then remove devDependencies
RUN npm run build
RUN npm prune --omit=dev

# Ensure the unprivileged user can write runtime assets
RUN chown -R node:node /home

# Use an unprivileged user
USER node

# Run the web service on container startup.
CMD [ "npm", "run", "start" ]
